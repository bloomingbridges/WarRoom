package {		import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;	import flash.display.Shape;			public class Retro extends MovieClip {		var rgb;			public function Retro() {						rgb = new RGBShift(titleScreen); 			// create a new RGBShift from the titleScreen			// removeChild(titleScreen); 			// remove the original title screen from the stage						// add it to the stage at the bottom of the display list			addChildAt(rgb, 1); 			var timer:Timer = new Timer(1000);		    timer.addEventListener(TimerEvent.TIMER, updateRetro);		    timer.start();		    buildScanlines();							}		function buildScanlines():void {			var block:Shape;			block = new Shape;			block.graphics.beginFill(0x000000,0.4);			for (var i = 0; i < stage.stageHeight / 2 ; i++) {				block.graphics.drawRect(0, i*2, stage.stageWidth, 1);			}			block.graphics.endFill();			addChild(block);		}		function buildRollbar():void {		}		function buildNoise():void {						// var bgdata:BitmapData = new BitmapData(ww, hh, false, 0xffffff);		 //  	var bg:Bitmap = new Bitmap(bgdata);			// bgdata.noise(Math.random() * 1000, 0, 255, 7, true);			} 		function updateRetro(e:TimerEvent):void{			titleScreen.mainText.text = e.currentTarget.currentCount;			removeChild(rgb);						rgb = new RGBShift(titleScreen); 			addChildAt(rgb, 1); 		    // trace("Times Fired: " + e.currentTarget.currentCount);		    // trace("Time Delayed: " + e.currentTarget.delay);		}	}}