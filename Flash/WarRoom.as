package {		import flash.display.MovieClip;	import flash.events.KeyboardEvent;		public class WarRoom extends MovieClip {				private const WAITING = 0;		private const LOCKED = 1;		private var state:int;		private var map:MapGenerator;				public function WarRoom() {						map = new MapGenerator();			addChild(map);			stage.addEventListener(KeyboardEvent.KEY_UP, onBuzzerPress);		}		private function onBuzzerPress(e:KeyboardEvent):void {						switch (state) {				case WAITING:					var target:Point = map.lockDownCurrentPosition();					goState(LOCKED);					break;				case LOCKED:					map.unlock();					goState(WAITING);					break;			}		}		private function goState(s:int):void {			state = s;		}	}	}