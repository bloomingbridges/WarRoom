package  {		import flash.display.Sprite;	import flash.display.Shape;		public class MapUnit extends Sprite {				public  var w:Number = 2;		public  var h:Number = 3;		public  var block:Shape;		public  var brightness:Number;		public  var colour:uint;		private var lit:Boolean;		public function MapUnit(population:Number) {			brightness = population;			colour = (population == 0) ? 0x111111 : 0xAAAAAA;			switch (true) {				case (population > 700000):					colour = 0xFF00FF;					break;				case (population > 500000):					colour = 0xEE00EE;					break;				case (population > 100000):					colour = 0xCC00CC;					break;				case (population > 50000):					colour = 0x990099;					break;				case (population > 100):					colour = 0x660066;					break;				case (population > 0):					colour = 0x330033;					break;				default:					colour = 0x111111;					break;			}			block = new Shape;			addChild(block);			drawBlock(false);		}		public function select():void {			lit = true;			drawBlock(true);		}		public function deselect():void {			lit = false;			drawBlock(false);		}		private function drawBlock(highlight:Boolean):void {			if (highlight)				block.graphics.beginFill(0xFFFFFF);			else 				block.graphics.beginFill(colour);			block.graphics.drawRect(0, 0, w, h);			block.graphics.endFill();		}	}	}