package  {		import flash.display.Sprite;	import flash.display.Shape;		public class MapUnit extends Sprite {				public  var w:Number = 2;		public  var h:Number = 2;		public  var block:Shape;		public  var brightness:Number;		public  var colour:uint;		private var lit:Boolean;		public function MapUnit(population:Number) {			brightness = population;			colour = (population == 0) ? 0x333333 : 0xCCCCCC;			block = new Shape;			addChild(block);			drawBlock(false);		}		public function select():void {			lit = true;			drawBlock(true);		}		public function deselect():void {			lit = false;			drawBlock(false);		}		private function drawBlock(highlight:Boolean):void {						if (highlight)				block.graphics.beginFill(0xFFFFFF);			else 				block.graphics.beginFill(colour);			block.graphics.drawRect(0, 0, w, h);			block.graphics.endFill();		}	}	}